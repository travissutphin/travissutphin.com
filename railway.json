{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "region": "us-west1",
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "build": {
        "builder": "DOCKERFILE"
      },
      "deploy": {
        "numReplicas": 2,
        "restartPolicyType": "ALWAYS"
      }
    },
    "staging": {
      "build": {
        "builder": "DOCKERFILE"
      },
      "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE"
      }
    }
  }
}