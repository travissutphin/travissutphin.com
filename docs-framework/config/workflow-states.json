  "automation_triggers": {
    "_comment": "Define when automation should move cards between states",
    "on_git_commit": {
      "enabled": true,
      "pattern": "deploy|live",
      "action": "move_to_live"
    },
    "on_git_push_staging": {
      "enabled": true,
      "branch": "staging",
      "action": "move_to_staged"
    },
    "on_git_push_main": {
      "enabled": true,
      "branch": "main",
      "action": "move_to_live"
    }
  },

  "card_properties": {
    "task_types": [
